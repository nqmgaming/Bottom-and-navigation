<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.MessengerFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFCF41">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="100dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBar_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFBF00">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar_messenger"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFBF00"
                    app:menu="@menu/tool_bar"
                    app:navigationIcon="@drawable/baseline_message_24"
                    app:subtitle="Messenger"
                    app:title="Messenger"
                    app:titleTextColor="@color/white" />

            </com.google.android.material.appbar.AppBarLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_messenger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_message_24"
            android:drawablePadding="10dp"
            android:text="Messenger"
            android:textColor="#fff"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>